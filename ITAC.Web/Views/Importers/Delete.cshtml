@model ITAC.Models.Importer
@{
    ViewData["Title"] = "Delete Importer";
}
<h1 class="h3 mb-3">@ViewData["Title"]</h1>

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this importer?
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Business Name</dt>
            <dd class="col-sm-9">@Model.BusinessName</dd>

            <dt class="col-sm-3">Trade Name</dt>
            <dd class="col-sm-9">@Model.TradeName</dd>

            <dt class="col-sm-3">Customs Number</dt>
            <dd class="col-sm-9">@Model.CustomsNumber</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
</form>
